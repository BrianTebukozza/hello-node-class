doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Agent Registration
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet')
  link(rel='stylesheet' href='styles.css')
.container.form-container
  h2.text-center Agent Registration
  form#agentForm
    .mb-3
      label.form-label(for='agentFirstName') First Name
      input#agentFirstName.form-control.w-100(type='text' placeholder='Enter First Name' required='')
    .mb-3
      label.form-label(for='agentLastName') Last Name
      input#agentLastName.form-control.w-100(type='text' placeholder='Enter Last Name' required='')
    .mb-3
      label.form-label(for='agentEmail') Email
      input#agentEmail.form-control.w-100(type='email' placeholder='Enter Email' required='')
    .mb-3
      label.form-label(for='agentUsername') Username
      input#agentUsername.form-control.w-100(type='text' placeholder='Generated Username' required='' readonly='')
    .mb-3
      label.form-label(for='agentPassword') Password
      input#agentPassword.form-control.w-100(type='password' placeholder='Enter Password' required='')
    .mb-3
      label.form-label(for='agentConfirmPassword') Confirm Password
      input#agentConfirmPassword.form-control.w-100(type='password' placeholder='Confirm Password' required='')
    button.btn.btn-primary.w-100(type='submit') Register
  h3.mt-4 Registered Agents
  table.table.table-dark.mt-3
    thead
      tr
        th First Name
        th Last Name
        th Email
        th Username
        th Password
        th Actions
    tbody#agentsList
script(src='script.js')
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js')
